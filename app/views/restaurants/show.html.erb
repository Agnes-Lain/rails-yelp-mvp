<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>

<%= link_to "back to Resautrants", restaurants_path, class: "btn btn-primary" %>

<%= link_to "edit the restaurant", edit_restaurant_path, class: "btn btn-primary" %>

<h3>Customer reviews :</h3>

<p><%= "★" * @restaurant.average_rating %><%= "☆" * (5 - @restaurant.average_rating) %> </p>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>

<%= simple_form_for [ @restaurant, @review ] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: (0..5) %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
